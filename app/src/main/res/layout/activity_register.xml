<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context=".Register" >



   <LinearLayout

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"

        android:layout_alignParentLeft="true"

        android:layout_alignParentRight="true"

        android:layout_alignParentTop="true"

        android:orientation="vertical" >



        <TextView

            android:id="@+id/textView1"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"

            android:text="@string/sign_up"

            android:textAppearance="?android:attr/textAppearanceLarge" />



        <TextView

            android:id="@+id/fName"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="@string/first_name"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="@string/tfirst_name" />



        <EditText

            android:id="@+id/etfName"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:ems="10"

            android:inputType="textPersonName" >



            <requestFocus />

        </EditText>



        <TextView

            android:id="@+id/lName"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="@string/tlast_name"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="@string/last_name" />



        <EditText

            android:id="@+id/etlName"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:ems="10"

            android:inputType="textPersonName" />



        <TextView

            android:id="@+id/Email"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="@string/student_email"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="@string/tstudent_email" />



        <EditText

            android:id="@+id/etEmail"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:ems="10"

            android:inputType="textEmailAddress" />



        <TextView

            android:id="@+id/Password"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="@string/password"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="@string/tpassword" />



        <EditText

            android:id="@+id/etPassword"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:ems="10"

            android:inputType="textPassword" />

        <TextView

            android:id="@+id/cPassword"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="@string/confirm_password"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="@string/tconfirm_password" />



        <EditText

            android:id="@+id/etcPassword"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:ems="10"

            android:inputType="textPassword" />







        <Button

            android:id="@+id/bRegister"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"

            android:onClick="bRegister"

            android:text="@string/signup" />

    </LinearLayout>

</RelativeLayout>